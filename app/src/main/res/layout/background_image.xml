<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="30dp"
        android:text="Фон:"
        android:textColor="#E59206"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/strokeForLightBackground"
        android:layout_width="115dp"
        android:layout_height="240dp"
        android:background="#FFFF0000"
        app:layout_constraintBottom_toBottomOf="@id/lightBackground"
        app:layout_constraintEnd_toEndOf="@id/lightBackground"
        app:layout_constraintStart_toStartOf="@id/lightBackground"
        app:layout_constraintTop_toTopOf="@id/lightBackground" />

    <TextView
        android:id="@+id/strokeForDarkBackground"
        android:layout_width="115dp"
        android:layout_height="240dp"
        android:background="#FFFF0000"
        app:layout_constraintBottom_toBottomOf="@id/darkBackground"
        app:layout_constraintEnd_toEndOf="@id/darkBackground"
        app:layout_constraintStart_toStartOf="@id/darkBackground"
        app:layout_constraintTop_toTopOf="@id/darkBackground" />

    <TextView
        android:id="@+id/strokeForMiddleBackground"
        android:layout_width="115dp"
        android:layout_height="240dp"
        android:background="#FFFF0000"
        app:layout_constraintBottom_toBottomOf="@id/middleBackground"
        app:layout_constraintEnd_toEndOf="@id/middleBackground"
        app:layout_constraintStart_toStartOf="@id/middleBackground"
        app:layout_constraintTop_toTopOf="@id/middleBackground" />

    <ImageView
        android:id="@+id/lightBackground"
        android:layout_width="110dp"
        android:layout_height="230dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/app_background_light" />

    <ImageView
        android:id="@+id/darkBackground"
        android:layout_width="110dp"
        android:layout_height="230dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/middleBackground"
        app:layout_constraintStart_toEndOf="@+id/lightBackground"
        app:srcCompat="@drawable/app_background_darck" />

    <ImageView
        android:id="@+id/middleBackground"
        android:layout_width="110dp"
        android:layout_height="230dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/app_background_midle" />

</androidx.constraintlayout.widget.ConstraintLayout>